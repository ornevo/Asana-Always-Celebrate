{
	"manifest_version": 2,
	"name": "Disappointment Blocker",
	"version": "0.2.2",
	"description": "Celebrate every time you finish a task on Asana, because there's always a reason to party!",
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "icon/icon16.png",
			"48": "icon/icon48.png",
			"128": "icon/icon128.png"
		}
	},
	"permissions": [
		"activeTab",
		"*://*.asana.com/*"
	],
	"content_scripts": [
		{
			"matches": ["*://*.asana.com/*"],
			"js": ["contentScript.js"]
		}
	],
	"web_accessible_resources": [
		"injected/hooking.js",
		"injected/celebrations.js",
		"injected/main.js"
	]
}
